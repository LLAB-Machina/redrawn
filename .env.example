DATABASE_URL=postgres://redrawn:redrawn@localhost:5432/redrawn?sslmode=disable
SESSION_SECRET=dev_session_secret

# Where your web app is served from
# If running Next.js directly: http://localhost:3000
# If using Caddy proxy in docker compose: http://localhost
PUBLIC_BASE_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cloudflare Images (dev placeholders)
CF_ACCOUNT_ID=dev_cf_account
CF_IMAGES_TOKEN=dev_cf_images_token
CF_IMAGES_DELIVERY_HASH=dev_cf_delivery_hash

# R2 (S3-compatible) optional
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_S3_ENDPOINT=
R2_PUBLIC_BASE_URL=

# Stripe (optional)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# OpenAI (optional)
OPENAI_API_KEY=

# Credits per billing cycle (default)
CREDITS_PER_CYCLE=1000

# Frontend API proxy target for Next.js rewrites
API_PROXY_TARGET=http://localhost:8080
